// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  published Boolean? @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model User {
  id             String @id @default(cuid())
  email          String @unique
  hashedPassword String
  posts          Post[]
}

// one-to-many one post can only belong to one user but one user can have many posts
// many-to-many Post[] and User[]
// one-to-one Post wont be an array and optional and authorid will be unique 

model Student {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
}

model Club {
  id              Int     @id @default(autoincrement())
  clubName        String
  clubCategorys   String
  clubDescription String
  clubEvents      String
  application     Boolean
}

model AdminLogin {
  id       Int    @id @default(autoincrement())
  username String
  password String
}
