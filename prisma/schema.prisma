// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int    @id @default(autoincrement())
  clubs     Club[]
  firstName String
  lastName  String
}

model Leader {
  id             Int    @id @default(autoincrement())
  firstName      String
  lastName       String
  hashedPassword String
  Club           Club[]
}

model Club {
  id              Int        @id @default(autoincrement())
  clubName        String
  clubModerator   Leader     @relation(fields: [moderatorId], references: [id])
  moderatorId     Int
  clubCategories  Category[]
  clubmembers     Student[]
  clubDescription String
  clubEvents      Event[]
  application     Boolean
  addedAt         DateTime   @default(now())
  editedAt        DateTime   @updatedAt
}

model Category {
  id           Int    @id @default(autoincrement())
  categoryName String
  Club         Club   @relation(fields: [clubId], references: [id])
  clubId       Int
}

model Event {
  id               Int      @id @default(autoincrement())
  eventName        String
  eventDescription String
  eventLocation    String
  eventTime        DateTime
  Club             Club     @relation(fields: [clubId], references: [id])
  clubId           Int
}

model AdminLogin {
  id             Int    @id @default(autoincrement())
  username       String
  hashedPassword String
}
